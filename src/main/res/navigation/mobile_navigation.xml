<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.nlink.dadm_u3p1.ui.home.HomeFragment"
        android:label="Explora las subastas"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.nlink.dadm_u3p1.ui.dashboard.DashboardFragment"
        android:label="Subastas en el carrito"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.nlink.dadm_u3p1.ui.notifications.NotificationsFragment"
        android:label="Tu cuenta"
        tools:layout="@layout/fragment_notifications" />
</navigation>